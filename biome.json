{
	"$schema": "https://biomejs.dev/schemas/1.8.1/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"lineWidth": 120
	},
	"linter": {
		"enabled": true,
		"rules": {
			"correctness": {
				"noUnusedVariables": {
					"level": "error",
					"fix": "safe"
				}
			},
			"recommended": true
		}
	},
	"files": {
		"include": ["**/*.ts", "**/*.js"],
		"ignore": ["**/node_modules/**"]
	},

	"javascript": {
		"formatter": {
			"bracketSpacing": true,
			"quoteStyle": "single"
		}
	}
}
